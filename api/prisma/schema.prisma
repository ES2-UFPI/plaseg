generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MUNICIPALITY
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  document String @unique
  phone    String @unique
  password String
  role     Role   @default(MUNICIPALITY)

  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt

  @@map("users")
}
